<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout android:orientation="vertical"
        android:weightSum="10" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/whiteimg">

        <RelativeLayout android:layout_weight="2" android:layout_width="match_parent"
            android:layout_height="0dp" android:background="#45b7ff">

            <TextView android:id="@+id/textGrid" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_centerInParent="true"
                android:text="Enroll  Courses"
                android:textColor="#FFFFFF"
                android:textSize="35sp"
                android:textStyle="bold"/>
            <TextView android:id="@+id/textGrid2" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_centerInParent="true"
                android:text="Practical Skills Lead to a Digital Terrestrial"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="italic"
                android:layout_below="@+id/textGrid"/>
        </RelativeLayout>


        <GridLayout android:id="@+id/home_grid" android:columnCount="2"
            android:rowCount="4" android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false" android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:padding="14dp">

            <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="0dp"
                android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp" android:layout_marginRight="16dp" app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:background="@drawable/card_edge">

                <LinearLayout
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp" android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="145dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/djanjo" />

                    <Button
                        android:id="@+id/bt1"
                        android:layout_width="45dp"
                        android:layout_height="26dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/viewcoursebtn"
                        android:text="About Course"
                        android:textColor="#fff"
                        android:textSize="10sp"
                        android:textStyle="bold"></Button>


                </LinearLayout> </androidx.cardview.widget.CardView>

            <!-- Column 2 -->
            <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="0dp"
                android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp" android:layout_marginRight="16dp" app:cardElevation="8dp"
                app:cardCornerRadius="8dp" >

                <LinearLayout android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp" android:orientation="vertical"
                    android:layout_width="wrap_content" android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="59dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/photoshop" />

                    <Button
                        android:id="@+id/bt2"
                        android:layout_width="45dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/viewcoursebtn"
                        android:text="About Course"
                        android:textColor="#fff"
                        android:textSize="10sp"
                        android:textStyle="bold"></Button>

                    <TextView
                        android:layout_width="76dp"
                        android:layout_height="1dp"
                        android:text="Photoshop"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"

                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout> </androidx.cardview.widget.CardView>

            <!-- Row 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp" android:layout_height="0dp"
                android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp" android:layout_marginRight="16dp" app:cardElevation="8dp"
                app:cardCornerRadius="8dp" >

                <LinearLayout android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp" android:orientation="vertical" android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:layout_width="102dp"
                        android:layout_height="59dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/phppp" />
                    <TextView android:text="learn php" android:textAlignment="center"
                        android:textColor="@android:color/black" android:textSize="18sp" android:textStyle="bold"
                        android:layout_width="wrap_content" android:id="@+id/tt1"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="0dp" android:layout_height="0dp"
                android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp" android:layout_marginRight="16dp" app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp" android:orientation="vertical" android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="73dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/scartch" />

                    <TextView
                        android:layout_width="109dp"
                        android:layout_height="64dp"
                        android:text="8 Scratch Game Development"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" /> </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp" android:layout_height="0dp"
                android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp" android:layout_marginRight="16dp" app:cardElevation="8dp"
                app:cardCornerRadius="8dp" >

                <LinearLayout android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp" android:orientation="vertical" android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="117dp"
                        android:layout_height="49dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/javaj" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Programming In Java"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" /> </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp" android:layout_height="0dp"
                android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp" android:layout_marginRight="16dp" app:cardElevation="8dp"
                app:cardCornerRadius="8dp" >

                <LinearLayout android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp" android:orientation="vertical" android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="71dp"
                        android:layout_height="47dp"
                        android:layout_gravity="center_horizontal"

                        android:src="@drawable/js" />

                    <TextView
                        android:layout_width="95dp"
                        android:layout_height="47dp"
                        android:text="Code with Java Script"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" /> </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp" android:layout_height="0dp"
                android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_column="">

                <LinearLayout android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp" android:orientation="vertical" android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView android:src="@drawable/kivyy"

                        android:layout_gravity="center_horizontal" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp" android:layout_height="0dp"
                android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp" android:layout_marginRight="16dp" app:cardElevation="8dp"
                app:cardCornerRadius="8dp" >

                <LinearLayout android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp" android:orientation="vertical" android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView android:src="@drawable/pythonn"
                        android:layout_gravity="center_horizontal" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>




        </GridLayout></LinearLayout></RelativeLayout>