<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_weight="2"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:background="@drawable/bluebg">

    <ImageView
        android:id="@+id/imh"
        android:layout_width="386dp"
        android:layout_height="181dp"

        android:paddingLeft="100dp"
        android:src="@drawable/booksbackground"></ImageView>

    <Button
        android:id="@+id/s1"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/signbtn"
        android:hint="Chapter 1"
        android:text="Chapter1"
        android:textSize="20sp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/s2"
        android:layout_width="118dp"
        android:layout_height="wrap_content"


        android:layout_marginTop="320dp"
        android:background="@drawable/signbtn"
        android:hint="Chapter 3"
        android:text="Chapter3"
        android:textSize="20sp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/s3"
        android:layout_width="135dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/imh"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/signbtn"
        android:hint="Chapter 2"
        android:text="Chapter 2"
        android:textSize="20sp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/s4"
        android:layout_width="116dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/imh"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="138dp"
        android:background="@drawable/signbtn"
        android:hint="Chapter 4"
        android:text="Chapter4"
        android:textSize="20sp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/s5"
        android:layout_width="121dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/imh"
        android:layout_marginLeft="248dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/signbtn"
        android:hint="Chapter 5"
        android:text="Chapter5"
        android:textSize="20sp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/s6"
        android:layout_width="123dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/imh"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/signbtn"
        android:hint="Chapter 6"
        android:text="Chapter 6"
        android:textSize="20sp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/s7"
        android:layout_width="123dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/imh"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/signbtn"
        android:hint="Chapter 7"
        android:text="Chapter 7"
        android:textSize="20sp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/s8"
        android:layout_width="169dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/imh"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="311dp"
        android:background="@drawable/studybtn"
        android:text=" +View Study Material"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"></Button>

    <include layout="@layout/fotter_ch" />
</RelativeLayout>

